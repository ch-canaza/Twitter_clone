<div class= "field text-center w-75 p-3">
  <%= form_with(model: @tweet) do |form| %>
    <% if @tweet.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@tweet.errors.count, "error") %> 
            prohibited this tweet from being posted:
        </h2>

        <ul>
          <% @tweet.errors.each do |error| %>
            <li>
              <%= error.full_message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group" >
      <strong>
        <%= form.label :tweet %>
      </strong>
      <%= form.text_area :tweet, class:"form-control form-control-lg" %>
    </div>
    <br>
  <div class="actions form-label">
      <%= form.submit :post, class:"btn btn-info" %>
    </div>
  <% end %>
</div>